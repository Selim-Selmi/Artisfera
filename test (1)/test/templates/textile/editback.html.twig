<main id="main" class="main">
    <div class="container">
        <div class="card shadow p-4">
            <h2 class="text-center mb-4">Éditer un Textile</h2>
            <div class="col-xl-8 mx-auto">
                <div class="donate-one__form">
                    {{ form_start(form, {'enctype': 'multipart/form-data', 'attr': {'novalidate': 'novalidate'}}) }}
                    
                    <h4 class="donate-one__subtitle">Informations du Textile</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>{{ form_label(form.nom, 'Nom du Textile') }}</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}}) }}
                                {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>{{ form_label(form.type, 'Type de Textile') }}</label>
                                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Type de textile'}}) }}
                                {{ form_errors(form.type, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>{{ form_label(form.description, 'Description') }}</label>
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description du textile'}}) }}
                                {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>{{ form_label(form.matiere, 'Matière') }}</label>
                                {{ form_widget(form.matiere, {'attr': {'class': 'form-control', 'placeholder': 'Matière du textile'}}) }}
                                {{ form_errors(form.matiere, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>{{ form_label(form.couleur, 'Couleur') }}</label>
                                {{ form_widget(form.couleur, {'attr': {'class': 'form-control', 'placeholder': 'Couleur du textile'}}) }}
                                {{ form_errors(form.couleur, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>{{ form_label(form.dimension, 'Dimension') }}</label>
                                {{ form_widget(form.dimension, {'attr': {'class': 'form-control', 'placeholder': 'Dimension du textile'}}) }}
                                {{ form_errors(form.dimension, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>{{ form_label(form.createur, 'Créateur') }}</label>
                                {{ form_widget(form.createur, {'attr': {'class': 'form-control', 'placeholder': 'Nom du créateur'}}) }}
                                {{ form_errors(form.createur, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="fileInput">Image du Textile</label>
                                <div class="custom-file">
                                    {{ form_widget(form.imageFile, {'attr': {'class': 'custom-file-input', 'id': 'fileInput'}}) }}
                                    {{ form_errors(form.imageFile, {'attr': {'class': 'text-danger'}}) }}
                                    <label class="custom-file-label" for="fileInput">Choisir un fichier</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>{{ form_label(form.technique, 'Technique') }}</label>
                                {{ form_widget(form.technique, {'attr': {'class': 'form-control', 'placeholder': 'Technique utilisée'}}) }}
                                {{ form_errors(form.technique, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>{{ form_label(form.collection, 'Collection') }}</label>
                                {{ form_widget(form.collection, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.collection, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                        
                        <div class="col-lg-12 text-center mt-3">
                            <button type="submit" class="btn btn-primary">Envoyer</button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
