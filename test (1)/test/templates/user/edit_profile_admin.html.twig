{% extends 'profil.html.twig' %}

{% block title %}Ajouter un Compte{% endblock %}

{% block body %}
{{parent()}}
    <div class="container">
        <div class="card shadow p-4">
            <h2 class="text-center mb-4">Éditer un Utilisateur</h2>
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group mt-3">
                {{ form_label(form.genre) }}
                {{ form_widget(form.genre, {'attr': {'class': 'form-select'}}) }}
            </div>

            <div class="form-group mt-3">
                {{ form_label(form.plainPassword) }}
                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

            <fieldset class="mt-3">
                <legend>Rôles</legend>
                <div class="form-check">
                    {{ form_widget(form.roles, {'attr': {'class': 'form-check-label'}}) }}
                </div>
            </fieldset>

            <div class="form-check mt-3">
                {{ form_widget(form.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.agreeTerms) }}
            </div>

            <div class="text-center mt-4">
                {{ form_widget(form.Envoyer, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

            {{ form_end(form) }}
            
            <div class="mt-4 text-center">
                <a href="{{ path('app_profile_admin') }}">
                    <span>Retour à la Profile sans modification</span>
                </a>
            </div>
        </div>
    </div>

{% endblock %}
