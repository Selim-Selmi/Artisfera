{% extends 'base.html.twig' %}

{% block head %}
{{ parent() }}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<section class="donate-one">
<img src="{{ asset('assets/images/bgevent.png') }}" class="donate-one__sculpture" alt="" style="width: 480px; height: auto; margin-left: 60px;">

    <div class="container">
        <div class="row">
            <div class="col-xl-4">
                <div class="donate-one__block">
                    <div class="block-title">
                        <p>Ajouter un sposnor</p>
                        <h3>Remplissez le formulaire</h3>
                    </div>
                    <p>Ajoutez votre sponsor en remplissant les d√©tails ci-dessous. Assurez-vous que toutes les informations sont correctes avant de soumettre.</p>
                </div>
            </div>
            
            <div class="col-xl-8">
                <div class="donate-one__form">
                    {{ form_start(form, {'enctype': 'multipart/form-data', 'attr': {'novalidate': 'novalidate'}}) }}

                    <h4 class="donate-one__subtitle">Informations du sponsor</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                 {{ form_label(form.nom, 'Nom du sponsor') }}
                        {{ form_widget(form.nom, {'attr': {'class': 'input', 'placeholder': 'Entrez le nom du sponsor'}}) }}
                        {{ form_errors(form.nom) }}
                        </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.type, 'Type du sponsorisation') }}
                        {{ form_widget(form.type, {'attr': {'class': 'input', 'placeholder': 'Entrez le type du sponsorisation'}}) }}
                        {{ form_errors(form.type) }}
                      {{ form_errors(form.type, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.email, 'Adresse mail') }}
                        {{ form_widget(form.email, {'attr': {'class': 'input', 'placeholder': 'Entrez l adresse mail'}}) }}
                        {{ form_errors(form.email) }}</div>
                        </div>

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                               {{ form_label(form.telephone, 'Numero de telephone') }}
                        {{ form_widget(form.telephone, {'attr': {'class': 'input', 'placeholder': 'Entrez le num de telephone'}}) }}
                        {{ form_errors(form.telephone) }}
</div>
                        </div>

    <div class="col-lg-6">
        <div class="donate-one__input">
            {{ form_label(form.siteWeb, 'Site Web') }}
                        {{ form_widget(form.siteWeb, {'attr': {'class': 'input', 'placeholder': 'Entrez le lien du site web'}}) }}
                        {{ form_errors(form.siteWeb) }}
 </div>
    </div>

    <div class="col-lg-6">
   {{ form_label(form.logo, 'Logo du sponsor') }}
                        {{ form_widget(form.logo, {'attr':{'class': 'input', 'placeholder': 'Selectionnez une image'}}) }}
                        {{ form_errors(form.logo) }}

</div>



                        <div class="col-lg-12">
                            {{ form_label(form.montant, 'Montant') }}
                        {{ form_widget(form.montant, {'attr': {'class': 'input', 'placeholder': 'Entrez le montant'}}) }}
                        {{ form_errors(form.montant) }}

                        </div>

                        

                        <div class="col-lg-12">
                            <button type="submit" class="thm-btn donate-one__btn">Ajouter le sponsor</button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
