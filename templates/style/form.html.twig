                    </div><!-- /.main-nav__main-navigation -->
                   {#  <div class="main-nav__right">
                        <a href="#" class="search-popup__toggler"><i class="muzex-icon-search"></i></a>
                        <a class="sidemenu-icon side-content__toggler" href="#"><i class="muzex-icon-menu"></i></a>
                    </div><!-- /.main-nav__right --> #}
                </div><!-- /.inner-container -->
            </div><!-- /.container -->
        </nav>
<section class="donate-one">
    <img src="{{ asset('assets/images/zzz.png') }}" class="donate-one__sculpture" style="width: 550px; height: auto;">
    <div class="container">
        <div class="row">
            <div class="col-xl-4">
                <div class="donate-one__block">
                    <div class="block-title">
                        <p>Ajouter un style</p>
                        <h3>Remplissez le formulaire</h3>
                    </div><!-- /.block-title -->
{#                     <p>Ajoutez un nouveau style en remplissant les d√©tails ci-dessous. Assurez-vous que toutes les informations sont correctes avant de soumettre.</p>
 #}                </div><!-- /.donate-one__block -->
            </div><!-- /.col-lg-4 -->

            <div class="col-xl-8">
                <div class="donate-one__form">
                    {{ form_start(form, {'enctype': 'multipart/form-data', 'attr': {'novalidate': 'novalidate'}}) }}
                    <h4 class="donate-one__subtitle">Informations du style</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.type_p, 'Type de Style') }}</label>
                                {{ form_widget(form.type_p, {'attr': {'class': 'input', 'placeholder': 'Entrez le type de style'}}) }}
                                {{ form_errors(form.type_p, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-6 -->

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.description, 'Description') }}</label>
                                {{ form_widget(form.description, {'attr': {'class': 'input', 'placeholder': 'Entrez la description'}}) }}
                                {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-6 -->

                        <div class="col-lg-12">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.extab, 'Image') }}</label>
                                <div class="custom-file">
                                    {{ form_widget(form.extab, {'attr': {'class': 'custom-file-input', 'id': 'fileInput'}}) }}
                                    {{ form_errors(form.extab, {'attr': {'class': 'text-danger'}}) }}
                                    <label class="custom-file-label" for="fileInput">Choisir une image...</label>
                                </div>
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-12 -->

                        <div class="col-lg-12">
                            <div class="text-center mt-4">
                                <button type="submit" class="thm-btn donate-one__btn">Envoyer</button><!-- /.thm-btn -->
                            </div><!-- /.text-center -->
                        </div><!-- /.col-lg-12 -->
                    </div><!-- /.row -->

                    {{ form_end(form) }}
                </div><!-- /.donate-one__form -->
            </div><!-- /.col-lg-8 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>
{% endblock %}
