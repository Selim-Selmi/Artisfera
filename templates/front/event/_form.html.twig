{% extends 'basefront.html.twig' %}


{% block body %}
<section class="donate-one">
<img src="{{ asset('assets/images/shapes/event.png') }}" class="donate-one__sculpture" alt="" style="width: 300px; height: auto; margin-left: 160px;">
    <div class="container">
        <div class="row">
            <div class="col-xl-4">
                <div class="donate-one__block">
                    <div class="block-title">
                        <p>Modifier un événement</p>
                        <h3>Faites les modifications sur ce formulaire</h3>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-8">
                <div class="donate-one__form">
                    {{ form_start(form, {'enctype': 'multipart/form-data', 'attr': {'novalidate': 'novalidate'}}) }}

                    <h4 class="donate-one__subtitle">Informations de l'événement</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.titre, 'Titre') }}</label>
                                {{ form_widget(form.titre, {'attr': {'class': 'input', 'placeholder': 'Entrez le titre de l\'événement'}}) }}
                                {{ form_errors(form.titre, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.localisation, 'Localisation') }}</label>
                                {{ form_widget(form.localisation, {'attr': {'class': 'input', 'placeholder': 'Exemple: 25 Av.Libérté'}}) }}
                                {{ form_errors(form.localisation, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.date, 'Date') }}</label>
                                {{ form_widget(form.date, {'attr': {'class': 'input', 'type': 'date'}}) }}
                                {{ form_errors(form.date, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.heure, 'Heure') }}</label>
                                {{ form_widget(form.heure, {'attr': {'class': 'input', 'type': 'time'}}) }}
                                {{ form_errors(form.heure, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>

    <div class="col-lg-6">
        <div class="donate-one__input">
            <label>{{ form_label(form.nbParticipant, 'Nombre de participants') }}</label>
            {{ form_widget(form.nbParticipant, {'attr': {'class': 'input', 'type': 'number', 'min': '0'}}) }}
            {{ form_errors(form.nbParticipant, {'attr': {'class': 'text-danger'}}) }}
        </div>
    </div>

    <div class="col-lg-6">
    <div class="donate-one__input">
        <label>{{ form_label(form.sponsors, 'Sponsors') }}</label>
        {{ form_widget(form.sponsors, {'attr': {'class': 'form-select', 'multiple': 'multiple'}}) }}
        {{ form_errors(form.sponsors, {'attr': {'class': 'text-danger'}}) }}
        <!-- Icône "Ajouter Sponsor" -->
        <a href="{{ path('app_sponsor_new') }}" class="ml-2 text-primary" title="Ajouter un sponsor">
            <i class="fas fa-plus-circle"></i>
        </a>
    </div>
</div>



                        <div class="col-lg-12">
                            <div class="donate-one__input">
                                <label class="form-label">Image</label>
                                <div class="custom-file">
                                    {{ form_widget(form.image, {'attr': {'class': 'custom-file-input', 'id': 'imageInput'}}) }}
                                    {{ form_errors(form.image, {'attr': {'class': 'text-danger'}}) }}
                                    <label class="custom-file-label" for="imageInput">Choisir une image...</label>
                                </div>
                            </div>
                        </div>

                        

                        <div class="col-lg-12">
                            <button type="submit" class="thm-btn donate-one__btn">Modifier l'événement</button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

{% endblock %}
