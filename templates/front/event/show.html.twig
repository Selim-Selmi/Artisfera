{% extends 'basefront.html.twig' %}

{% block title %}Détails de l'événement{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body text-center">
            {% if event.image %}
                <img src="{{ asset('uploads/' ~ event.image) }}" alt="{{ event.titre }}" class="img-fluid rounded" style="max-height: 400px;">
            {% else %}
                <p class="text-muted">Aucune image disponible</p>
            {% endif %}
            <h2 class="mt-3">{{ event.titre | upper }}</h2>
            <p class="card-text"><b>Date  :</b> {{ event.date | date('d-m-Y') }}</p>
            <p class="card-text"><b>Heure :</b> {{ event.heure | date('H:i') }}</p>
            <p class="card-text"><b>Localisation :</b> {{ event.localisation }}</p>
        </div>
    </div>
</div>
{% endblock %}

                            
