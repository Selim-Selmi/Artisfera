{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .custom-file {
            position: relative;
            display: block;
            width: 100%;
            height: 40px;
        }
        .custom-file-input {
            width: 100%;
            height: 40px;
            opacity: 0;
            position: absolute;
            left: 0;
            top: 0;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
<nav class="main-nav-one stricky main-nav-one__home-two">
            <div class="container">
                <div class="inner-container">
                    <div class="logo-box">
                        <a href={{path('app_base')}}>
                            <img src="assets/images/o.png" alt width="143">
                        </a>
                        <a href="#" class="side-menu__toggler"><i class="muzex-icon-menu"></i></a>
                    </div><!-- /.logo-box -->
                    <div class="main-nav__main-navigation">
                        <ul class="main-nav__navigation-box">
                            <li class="dropdown">
                                <a href="#">Gestion Peinture</a>
                                <ul>
                                    <li><a href={{ path('app_peinture_new')}}> Ajouter les peinture</a></li>
                                    <li><a href={{ path('app_peinture_list')}}>Liste des peinture</a></li>
                                    <li><a href={{ path('app_style_new')}}>Ajouter les style</a></li>
                                    <li><a href={{ path('app_style_list')}}>Liste des styles</a></li>
                                </ul>
                            </li>
                          
                        </ul><!-- /.main-nav__navigation-box -->
                    </div><!-- /.main-nav__main-navigation -->
                   {#  <div class="main-nav__right">
                        <a href="#" class="search-popup__toggler"><i class="muzex-icon-search"></i></a>
                        <a class="sidemenu-icon side-content__toggler" href="#"><i class="muzex-icon-menu"></i></a>
                    </div><!-- /.main-nav__right --> #}
                </div><!-- /.inner-container -->
            </div><!-- /.container -->
        </nav>
<section class="donate-one">
    <img src="{{ asset('assets/images/rr.png') }}" class="donate-one__sculpture" style="width: 550px; height: auto;">
    <div class="container">
        <div class="row">
            <div class="col-xl-4">
                <div class="donate-one__block">
                    <div class="block-title">
                        <p>Ajouter une Peinture</p>
                        <h3>Remplissez le formulaire</h3>
                    </div><!-- /.block-title -->
                    <p>Ajoutez une nouvelle peinture en remplissant les détails ci-dessous. Assurez-vous que toutes les informations sont correctes avant de soumettre.</p>
                </div><!-- /.donate-one__block -->
            </div><!-- /.col-lg-4 -->
            
            <div class="col-xl-8">
                <div class="donate-one__form">
                    {{ form_start(form, {'enctype': 'multipart/form-data', 'attr': {'novalidate': 'novalidate'}}) }}
                    <h4 class="donate-one__subtitle">Informations de la Peinture</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.titre, 'Titre de la Peinture') }}</label>
                                {{ form_widget(form.titre, {'attr': {'class': 'input', 'placeholder': 'Entrez le titre'}}) }}
                                {{ form_errors(form.titre, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-6 -->

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.date_cr, 'Date de Création') }}</label>
                                {{ form_widget(form.date_cr, {'attr': {'class': 'input', 'placeholder': 'Date de création'}}) }}
                                {{ form_errors(form.date_cr, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-6 -->

                        <div class="col-lg-12">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.type, 'Style de Peinture') }}</label>
                                {{ form_widget(form.type, {'attr': {'class': 'input', 'placeholder': 'Style de peinture'}}) }}
                                {{ form_errors(form.type, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-12 -->

                        <div class="col-lg-12">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.tableau, 'Image du Tableau') }}</label>
                                <div class="custom-file">
                                    {{ form_widget(form.tableau, {'attr': {'class': 'custom-file-input', 'id': 'fileInput'}}) }}
                                    {{ form_errors(form.tableau, {'attr': {'class': 'text-danger'}}) }}
                                    <label class="custom-file-label" for="fileInput">Choisir une image...</label>
                                </div>
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-12 -->

                        

                        <div class="col-lg-12">
                            <button type="submit" class="thm-btn donate-one__btn">Envoyer</button><!-- /.thm-btn -->
                        </div><!-- /.col-lg-12 -->
                    </div><!-- /.row -->

                    {{ form_end(form) }}
                </div><!-- /.donate-one__form -->
            </div><!-- /.col-lg-8 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>
{% endblock %}
