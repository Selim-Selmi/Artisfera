        <ul id="tables-nav" class="nav-content collapse show" data-bs-parent="#sidebar-nav">
            <li>
            <a href="{{ path('app_user_list') }}" >
              <i class="bi bi-circle"></i><span>Liste des Utilisateurs </span>
            </a>
          </li>
          <li>
            <a href="tables-general.html">
              <i class="bi bi-circle"></i><span>Liste des Musiques</span>
            </a>
          </li>
          <li>
            <a href="{{ path('app_peinture_list_back') }}"class="active">
              <i class="bi bi-circle"></i><span>Liste des Peintures(editer)</span>
            </a>
          </li>
          <li>
            <a href="tables-general.html">
              <i class="bi bi-circle"></i><span>Liste des Textiles</span>
