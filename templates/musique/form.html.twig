{% extends 'base.html.twig' %}


{% block head %}
{{ parent() }}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<head> 
<style>
.custom-file {
    position: relative;
    display: block;
    width: 100%;
    height: 40px;
}

.custom-file-input {
    width: 100%;
    height: 40px;
    opacity: 0;
    position: absolute;
    left: 0;
    top: 0;
    cursor: pointer;
}

{# .custom-file-label {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 40px;
    padding: 10px;
    background: #f8f9fa;
    border: 1px solid #ced4da;
    border-radius: 5px;
    font-size: 14px;
    color: #495057;
} #}
</style>
</head>
{% endblock %}

{% block body %}


 {# <h1> {{ title }} </h1> #}<section class="donate-one">
    <img src="{{ asset('assets/images/main-slider/pp.png') }}" class="donate-one__sculpture" alt="">
    <div class="container">
        <div class="row">
            <div class="col-xl-4">
                <div class="donate-one__block">
                    <div class="block-title">
                        <p>Ajouter une Musique</p>
                        <h3>Remplissez le formulaire</h3>
                    </div><!-- /.block-title -->
                    <p>Ajoutez une nouvelle musique en remplissant les d√©tails ci-dessous. Assurez-vous que toutes les informations sont correctes avant de soumettre.</p>
                </div><!-- /.donate-one__block -->
            </div><!-- /.col-lg-4 -->
            
            <div class="col-xl-8">
                <div class="donate-one__form">
                    {{ form_start(form, {'enctype': 'multipart/form-data', 'attr': {'novalidate': 'novalidate'}}) }}

                    <h4 class="donate-one__subtitle">Informations de la Musique</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.titre, 'Titre') }} </label>
                                {{ form_widget(form.titre, {'attr': {'class': 'input', 'placeholder': 'Entrez le titre'}}) }}
                                {{ form_errors(form.titre, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-6 -->

                        <div class="col-lg-6">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.genre, 'Genre') }}</label>
                                {{ form_widget(form.genre, {'attr': {'class': 'input', 'placeholder': 'Genre de musique'}}) }}
                                {{ form_errors(form.genre, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-6 -->

                        <div class="col-lg-12">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.description, 'Description') }} </label>
                                {{ form_widget(form.description, {'attr': {'class': 'input', 'placeholder': 'Description de la musique'}}) }}
                                {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-12 -->

                        <div class="col-lg-12">
    <div class="donate-one__input">
        <label class="form-label">Fichier</label>
        <div class="custom-file">
            {{ form_widget(form.cheminFichier, {'attr': {'class': 'custom-file-input', 'id': 'fileInput'}}) }}
            {{ form_errors(form.cheminFichier, {'attr': {'class': 'text-danger'}}) }}
            <label class="custom-file-label" for="fileInput">Choisir un fichier...</label>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="donate-one__input">
        <label class="form-label">Photo</label>
        <div class="custom-file">
            {{ form_widget(form.photo, {'attr': {'class': 'custom-file-input', 'id': 'photoInput'}}) }}
            {{ form_errors(form.photo, {'attr': {'class': 'text-danger'}}) }}
            <label class="custom-file-label" for="photoInput">Choisir une photo...</label>
        </div>
    </div>
</div>


                        <div class="col-lg-12">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.artistId, 'Artiste') }}</label>
                                {{ form_widget(form.artistId, {'attr': {'class': 'input'}}) }}
                                {{ form_errors(form.artistId, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-12 -->

                        <div class="col-lg-12">
                            <div class="donate-one__input">
                                <label>{{ form_label(form.artistName, 'Nom de l\'artiste') }} </label>
                                {{ form_widget(form.artistName, {'attr': {'class': 'input', 'placeholder': 'Nom de l\'artiste'}}) }}
                                {{ form_errors(form.artistName, {'attr': {'class': 'text-danger'}}) }}
                            </div><!-- /.donate-one__input -->
                        </div><!-- /.col-lg-12 -->

                        {# Hidden date field to be set automatically #}
                        <div style="display: none;">
                            {{ form_widget(form.dateSortie) }}
                        </div>

                        <div class="col-lg-12">
                            <button type="submit" class="thm-btn donate-one__btn">Envoyer</button><!-- /.thm-btn -->
                        </div><!-- /.col-lg-12 -->
                    </div><!-- /.row -->

                    {{ form_end(form) }} {# End Symfony form #}
                </div><!-- /.donate-one__form -->
            </div><!-- /.col-lg-8 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>







{% endblock %}




